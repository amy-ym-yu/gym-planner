{
  "hosting": {
    "site": "gym-planner-d100a",
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "destination": "https://gym-planner-brg0.onrender.com"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    }
  }
}